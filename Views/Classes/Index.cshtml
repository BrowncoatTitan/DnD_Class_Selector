@model IEnumerable<Classes>

<div style="background-color: #9e829c70; padding: 32px; height: 1150px">
<h2>Classes</h2>


<div style="display: block">
    <a class="btn btn-primary" style="margin-bottom: 15px"href="/Classes/InsertClass/">Create New Class</a>
</div>

<table class="table table-striped table-hover">
    <tr>
        <th style ="color: aliceblue">
            ClassID</th>
        <th style="color: aliceblue">Name </th>
        <th style="color: aliceblue">Role</th>
        <th style="color: aliceblue">Magic</th>
    </tr>

    @foreach (var classes in @Model)
    {
        <tr>
            <td><a class="link-color-container" href=/Classes/ViewClass/@classes.ID>@classes.ID</td>
            <td><a class="link-color-container" href=/Classes/ViewClass/@classes.ID>@classes.Name</td>
            <td style="color: aliceblue;">@classes.Role</td>
            <td style="color: aliceblue;">@classes.Magic</td>
        </tr>
    }

</table>
</div>