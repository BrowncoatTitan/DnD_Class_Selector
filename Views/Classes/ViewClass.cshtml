@model Classes

<h3>@Model.Name Information</h3>

<table class="table table-striped table-hover">
    <tr>
        <th style="color: aliceblue;">ClassID</th>
        <th style="color: aliceblue;">Name</th>
        <th style="color: aliceblue;">Role</th>
        <th style="color: aliceblue;">Magic</th>
    </tr>
    <tr>
        <td style="color: aliceblue;">@Model.ID</td>
        <td style="color: aliceblue;">@Model.Name</td>
        <td style="color: aliceblue;">@Model.Role</td>
        <td style="color: aliceblue;">@Model.Magic</td>
    </tr>

    <div style="display: block">
    <a href="/Classes/UpdateClass/@Model.ID">Update this Class</a>
</div>

    <div style="display: block">

        @using (Html.BeginForm("DeleteClass", "Classes", "Post"))
        {
            <input type="hidden" asp-for="ID" value="@Model.ID" />
            <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this class" />
        }
    </div>
